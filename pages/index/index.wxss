/* pages/index/index.wxss */

/* 轮播图 */
.banners {
  width: 100%;
	height: 300rpx;
}

.banners image {
  width: 100%;
	height: 100%;
}

/* 五个图标导航区域 */

.navContainer{
	display: flex;
}

.navItem{
	display:flex;
	flex-direction: column;
	align-items: center;
	width: 20%;
}

.navContainer .iconfont{
	width: 100rpx;
	height: 100rpx;
	margin: 20rpx 0;
	border-radius: 50%;
	line-height: 100rpx;
	text-align: center;
	background: #FF6F91;
	color: white;
	font-size: 50rpx;
}

/* 推荐歌曲 */

.recommendContainer {
	padding: 20rpx;
}

/* 推荐歌单内容区 */

.recommendScroll{
	display:flex;
}

.scrollItem{
	width: 200rpx;
	margin-right: 20rpx;
	position: relative;
}

.scrollItem .songCount{
	position: absolute;
	width: 85rpx;
	height: 30rpx;
	display: flex;
	top: 3%;
	left: 50%;
	background-color: #000;
	border-radius: 30rpx;
	padding: 5rpx;
	opacity: .5;
}

.scrollItem .songCount text{
	color: white;
	font-size: 20rpx;
	font-weight: 600;
	overflow: hidden;
}

.scrollItem text{
	font-size: 27rpx;
	/* 单行文本溢出隐藏 */
	/* display: block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis; */

	/* 多行文本溢出隐藏 */
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical; /* 设置对其模式 */
	-webkit-line-clamp: 2; /* 设置多行的行数 */
}

.scrollItem image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 20rpx;
}

/* 排行榜 */

.topList{
	padding: 20rpx;
}

.topListSwiper{
	height: 400rpx;
}

.swiperItem{
	width: 96%;
	background-color: #fbfbfb;
}

.swiperItem .title{
	font-size: 30rpx;
	line-height: 80rpx;
}

.musicItem{
	/* 当一个元素设置为flex 其子元素会自动成为块元素 */
	display: flex;
	margin-bottom: 20rpx;
}

.musicItem image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 6rpx;
}

.musicItem .count{
	width: 100rpx;
	height: 100rpx;
	text-align: center;
	line-height: 100rpx;
}

.musicItem .musicName{
	height: 100rpx;
	line-height: 100rpx;
	max-width: 400rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
